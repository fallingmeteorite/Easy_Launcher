<ui:UiPage
    x:Class="Awake.Views.Pages.Code"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Awake.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Code"
    d:DataContext="{d:DesignInstance local:Code,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <StackPanel>
        <StackPanel Margin="5" Orientation="Horizontal">
            <Button Margin="5" Content="打开.git上层目录" Click="Button_Click"></Button>
            <Button x:Name="btnUpdateCode" Margin="5" Content="更新到最新版本" Click="UpdateCode_Click"></Button>
        </StackPanel>
        <ui:Card Margin="5">
            <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="5">
                        <Label>本地代码版本: </Label>
                    <Label x:Name="lblCurrHash"></Label>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                        <Label>更新信息提交: </Label>
                    <Label x:Name="lblCurrMessage"></Label>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label>云端提交日期: </Label>
                    <Label x:Name="lblCurrDate"></Label>
                </StackPanel>
            </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                    <Label>拉取仓库地址: </Label>
                    <Label x:Name="lblCurrGit"></Label>
                </StackPanel>
            </StackPanel>
        </ui:Card>
        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Margin="0,0,6,0" Symbol="XboxConsole24" />
                        <TextBlock Text="稳定版"/>
                    </StackPanel>
                </TabItem.Header>
                <DataGrid x:Name="commit2"
                    AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="短hash" Binding="{Binding Hash}" Width="*" />
                        <DataGridTextColumn Header="信息" Binding="{Binding Message}" Width="*" />
                        <DataGridTextColumn Header="日期" Binding="{Binding Date}" Width="*" />
                        <DataGridTemplateColumn Header="操作" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                        <Button Content="安装此版本代码"  Tag="{Binding Hash}" Click="setup_Click" Width="245"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <ui:SymbolIcon Margin="0,0,6,0" Symbol="XboxConsole24" />
                        <TextBlock Text="开发版" />
                    </StackPanel>
                </TabItem.Header>
                <DataGrid x:Name="commit" ScrollViewer.VerticalScrollBarVisibility="Visible"  MaxHeight="700"
                        AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="序号" Binding="{Binding Id}" Width="*"/>
                        <DataGridTextColumn Header="短Hash" Binding="{Binding Hash}" Width="*"/>
                        <DataGridTextColumn Header="信息" Binding="{Binding Message}" Width="*"/>
                        <DataGridTextColumn Header="日期" Binding="{Binding Date}" Width="*"/>
                        <DataGridCheckBoxColumn Header="当前" Binding="{Binding Checked}"  Width="*"/>
                        <DataGridTemplateColumn Header="操作" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" >
                                        <Button IsEnabled="{Binding Enable}" Content="安装此版本代码" Tag="{Binding Hash}" Click="setup_Click" Width="165"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </StackPanel>
</ui:UiPage>
